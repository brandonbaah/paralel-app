<h1>Update Client Information</h1>
<%= form_tag("/clients", method: "patch") do %>
<div>
  <%= label_tag(:name) %>
  <%= text_field_tag(:name, @client.name) %>
</div>
<div>
  <%= label_tag(:address,) %>
  <%= text_field_tag(:address, @client.address) %>
</div>
<div>
  <%= label_tag(:birthdate) %>
  <%= text_field_tag(:birthdate, @client.birthdate) %>
</div>
<div>
  <%= label_tag(:phone) %>
  <%= text_field_tag(:phone, @client.phone) %>
</div>
<%= hidden_field_tag(:id, @client.id) %>
<div>
  <%= submit_tag("Update Client") %>
</div>
<% end %>
