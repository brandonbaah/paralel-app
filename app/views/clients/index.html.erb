<div ng-app="app">
  <div ng-controller="clientsCtrl" ng-init="clientList()">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" align="center">
      Create New Client
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Create Your New Client</h4>
          </div>
          <div class="modal-body">
            <div>
              <label for="name" class="control-label">Name:</label>
              <input type="text" class="form-control "placeholder="Please enter full name" ng-model="client.name">
            </div>
            <div>
              <label for="address" class="control-label">Address:</label>
              <input type="text" class="form-control "placeholder="Please enter full address" ng-model="client.address">
            </div>
            <div>
              <label for="birthdate" class="control-label">DOB:</label>
              <input type="text" class="form-control "placeholder="YYYY/DD/MM" ng-model="client.birthdate">
            </div>
            <div>
              <label for="phone" class="control-label">Phone:</label>
              <input type="text" class="form-control "placeholder="XXX-XXX-XXXX" ng-model="client.phone">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" ng-click="addClient(client)">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  <h1 align="center">Clients</h1>

  <div ng-repeat="client in clients">
        <div class="col-md-4">
          <!-- Widget: user widget style 1 -->
          <div class="box box-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-yellow">
              <div class="widget-user-image">
              </div>
              <!-- /.widget-user-image -->
              <a ng-href="/clients/{{client.id}}" class="widget-user-username">{{client.name}}</a>
              <h6 class="widget-user-desc">{{client.address}}</h6>
            </div>
            <div class="box-footer no-padding">
              <ul class="nav nav-stacked">
                <li><a href="#">Case Notes <span class="pull-right badge bg-blue">{{client.case_notes.length}}</span></a></li>
                <li><a href="#">Goals <span class="pull-right badge bg-aqua">{{client.check_lists.length}}</span></a></li>
                <li><a href="#">Visiting Today <span class="pull-right badge bg-green">{{client.visit_today}}</span></a></li>
                <li><a href="#">Followers <span class="pull-right badge bg-red">842</span></a></li>
                <li>
                <div align="center">
                <button type="button" class="btn btn-primary" ng-click="toggleVisit(client)" ng-href="/visits/{{client.id}}", method: 'patch' data-toggle="button" aria-pressed="false" autocomplete="off">
                  Visit Today
                </button>
                <li>
              </ul>
            </div>
          </div>
          <!-- /.widget-user -->
        </div>
    </div>





  </div>
</div>
